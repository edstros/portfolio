      script(src="js/jquery.min.js")
      script(src="js/jquery.flip.js")
      script(src="js/jquery.scrollNav.js")
      script(src="js/jquery.tooltipster.js")
      script(src="js/main.js")
      script('.scrollSection').scrollNav({
        showHeadline: 'false',
        speed: 350,
        fixedMargin: 60,
        scrollOffset: 80
      });
      var $item = $('.scroll-nav__item');
      $.each($item, function() {
        $text = $(this).find('a').html().toLowerCase();
        $(this).addClass($text);
      });
